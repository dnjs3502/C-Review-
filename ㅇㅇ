// # ch11 입력값을 변수에 저장한다. 


#define _CRT_SECURE_NO_WARNINGS    // scanf 보안 경고로 인한 컴파일 에러 방지 (비주얼스튜디오만)
                                   // scanf는 입력값을 길이를 설정할 수 없어서 보안에 취약 
#include <stdio.h>

int main()
{
    int num1;

    printf("정수를 입력하세요: ");
    scanf("%d", &num1);    // 표준 입력을 받아서 변수에 저장, 
                           //첫 인수는 " " 안에 서식지정자를 넣어 입력형태 설정. 
                           //두번째 인수는 입력값을 저장할 변수를 넣는다. 

    printf("%d\n", num1);    // 변수의 내용을 출력

    return 0;
}


#define _CRT_SECURE_NO_WARNINGS    // scanf 보안 경고로 인한 컴파일 에러 방지
#include <stdio.h>

int main()
{
    int num1, num2;

    printf("정수를 두 개 입력하세요: ");
    scanf("%d %d", &num1, &num2);    // 값을 두 개 입력받아서 변수 두 개에 저장

    printf("%d %d\n", num1, num2);    // 변수의 내용을 출력

    return 0;
}


//실수를 받아서 변수에 저장하기 

#define _CRT_SECURE_NO_WARNINGS    // scanf 보안 경고로 인한 컴파일 에러 방지
#include <stdio.h>

int main()
{
    float num1;

    printf("실수를 입력하세요: ");
    scanf("%f", &num1);    // 실수를 입력받아서 변수에 저장

    printf("%f\n", num1);    // 변수의 내용을 출력

    return 0;
}
